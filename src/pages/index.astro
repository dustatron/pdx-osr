---
import { featuredEvents } from "../lib/featured";
import { GLOBAL } from "../lib/variables";
import Layout from "../layouts/Layout.astro";
import Button from "../components/Button.astro";
import Hero from "../components/home/Hero.astro";
import Section from "../components/common/Section.astro";
import FeaturedEvents from "../components/home/FeaturedEvents.astro";
---

<Layout>
  <Fragment slot="head">
    <title>{GLOBAL.username} • {GLOBAL.shortDescription}</title>
    <meta name="description" content={GLOBAL.longDescription} />
    <meta
      property="og:title"
      content={`${GLOBAL.username} • ${GLOBAL.shortDescription}`}
    />
    <meta property="og:description" content={GLOBAL.longDescription} />
    <meta property="og:image" content={`${GLOBAL.rootUrl}/zaggonaut.png`} />
    <meta property="og:url" content={GLOBAL.rootUrl} />
    <meta name="twitter:card" content="summary_large_image" />
    <meta
      name="twitter:title"
      content={`${GLOBAL.username} • ${GLOBAL.shortDescription}`}
    />
    <meta name="twitter:description" content={GLOBAL.longDescription} />
    <meta name="twitter:image" content={`${GLOBAL.rootUrl}/zaggonaut.png`} />
    <meta http-equiv="content-language" content="en" />
    <meta name="language" content="English" />
    <link rel="canonical" href={GLOBAL.rootUrl} />
  </Fragment>
  <Section class="my-16">
    <Hero />

    <div class="p-4">
      <h1 class="font-bold text-4xl">Join Us for OSR Convention</h1>
      <p>
        We're excited to announce the OSR Convention on July 26th at Dark Water
        Pub. This event celebrates the rich OSR tabletop role-playing games.
        Whether you're a seasoned player or new to the scene, theres a seat for
        you at our games.
      </p>
      <div class="mt-4">
        <a href="/events/osr-convention">
          <Button> OSR Convention Details </Button>
        </a>
      </div>
    </div>
  </Section>
  <Section>
    <FeaturedEvents featuredProjects={featuredEvents} />
  </Section>
</Layout>
