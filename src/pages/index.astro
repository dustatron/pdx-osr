---
import { featuredEvents } from "../lib/featured";
import { GLOBAL } from "../lib/variables";
import Layout from "../layouts/Layout.astro";
import Hero from "../components/home/Hero.astro";
import Section from "../components/common/Section.astro";
import FeaturedEvents from "../components/home/FeaturedEvents.astro";
---

<Layout>
  <Fragment slot="head">
    <title>{GLOBAL.username} • {GLOBAL.shortDescription}</title>
    <meta name="description" content={GLOBAL.longDescription} />
    <meta
      property="og:title"
      content={`${GLOBAL.username} • ${GLOBAL.shortDescription}`}
    />
    <meta property="og:description" content={GLOBAL.longDescription} />
    <meta property="og:image" content={`${GLOBAL.rootUrl}/zaggonaut.png`} />
    <meta property="og:url" content={GLOBAL.rootUrl} />
    <meta name="twitter:card" content="summary_large_image" />
    <meta
      name="twitter:title"
      content={`${GLOBAL.username} • ${GLOBAL.shortDescription}`}
    />
    <meta name="twitter:description" content={GLOBAL.longDescription} />
    <meta name="twitter:image" content={`${GLOBAL.rootUrl}/zaggonaut.png`} />
    <meta http-equiv="content-language" content="en" />
    <meta name="language" content="English" />
    <link rel="canonical" href={GLOBAL.rootUrl} />
  </Fragment>
  <Section class="my-16">
    <Hero />

    <div class="p-4">
      <h1 class="font-bold text-4xl">Join Us for OSR Convention</h1>
      <p>
        We're excited to announce the OSR Convention on July 26th at Deep Water
        Brew Pub. This event celebrates the rich traditions of Old School
        Revival (OSR) tabletop role-playing games. Whether you're a seasoned
        player or new to the scene, theres a seat for you at our games.
      </p>
      <div class="mt-4">
        <a href="events/osr-convention">
          <button
            type="button"
            class="py-2.5 px-5 me-2 mb-2 text-sm font-medium text-gray-900 focus:outline-none bg-white rounded-lg border border-gray-200 hover:bg-gray-100 hover:text-blue-700 focus:z-10 focus:ring-4 focus:ring-gray-100 dark:focus:ring-gray-700 dark:bg-gray-800 dark:text-gray-400 dark:border-gray-600 dark:hover:text-white dark:hover:bg-gray-700"
          >
            OSR Convention Details
          </button>
        </a>
      </div>
    </div>
  </Section>
  <Section>
    <FeaturedEvents featuredProjects={featuredEvents} />
  </Section>
</Layout>
